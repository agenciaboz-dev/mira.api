generator client {
    provider = "prisma-client-js" 
    previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model users {
    id          Int         @id @default(autoincrement())
    username    String      @unique
    email       String      @unique
    password    String
    name        String
    phone       String      @default("")
    adm         Boolean     @default(false)
    cpf         String      @default("02576698506")
    addresses   addresses[]
    cards       cards[]
    orders      orders[]
}

model cards {
    id                  Int         @id @default(autoincrement())
    name                String
    number              String
    expiration_month    String
    expiration_year     String
    cvv                 String
    type                String
    users               users       @relation(fields: [user], references: [id])
    user                Int
}

model addresses {
    id          Int         @id @default(autoincrement())
    receiver    String
    phone       String
    cep         String
    address     String
    number      Int
    complement  String?
    district    String
    city        String
    uf          String      @db.Char(2)
    users       users       @relation(fields: [user], references: [id])
    user        Int
    orders      orders[]
}

model products {
    id              Int         @id @default(autoincrement())
    name            String
    description     String
    stock           Int
    story           String      @db.Text
    usage           String?     @db.Text
    price           Float
    image           String      @db.Text
    video           String      @db.Text
    specifications  String      @db.Text
    weight          Float       @default(5)
    width           Float       @default(5)
    height          Float       @default(5)
    length          Float       @default(5)
    orders          orders[]
}

model orders {
    id              Int         @id @default(autoincrement())
    products        products[]
    user            users       @relation(fields: [user_id], references: [id])
    user_id         Int
    status          Int         @default(0)
    date            DateTime    @default(now())
    method          String?
    address         addresses   @relation(fields: [address_id], references: [id])
    address_id      Int         @default(1)
}

model pagseguro {
    id              Int         @id @default(autoincrement())
    private         String      @db.Text
    public          String      @db.Text
    timestamp       Int
}